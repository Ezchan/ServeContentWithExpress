<% include ../partials/header %>

<% include ../partials/navbar %>

<div class="container">
  <div class="row movieRow">
    <div class="col-sm-3 col-md-2">
      <img class="thumbnail" src="<%= movie.imgLink %>" alt="<%= movie.title %>">
    </div>
    <div class="col-sm-8 col-sm-offset-1 col-md-9 col-md-offset-1">
      <h2><%= movie.longTitle %></h2>
      <p><%= movie.description %></p>
      <span>Directors:</span>
      <ul>
        <% Object.keys(movie.directors).forEach(function (director) { %>
          <li><%= movie.directors[director] %></li>
        <% }) %>
      </ul>
    </div>
  </div>
</div>

<% include ../partials/footer %>
